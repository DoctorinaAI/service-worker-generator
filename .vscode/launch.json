{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[Dart] Example",
      "request": "launch",
      "type": "dart",
      "program": "bin/main.dart",
      "args": [
        "--input=example/build/web",
        "--output=sw.js",
        "--glob=*, **/*.js, **/*.json, assets/**",
        "--no-glob=sw.js, assets/NOTICES",
        "--comments",
      ],
      "env": {
        "ENVIRONMENT": "development"
      },
      "preLaunchTask": "example:flutter:build:web",
      "console": "debugConsole"
    },
    // dart test test/unit_test.dart --color --platform=vm
    {
      "name": "[Dart] Unit Test (vm)",
      "request": "launch",
      "type": "dart",
      "program": "test/unit_test.dart",
      "env": {
        "ENVIRONMENT": "test"
      },
      "console": "debugConsole",
      "runTestsOnDevice": false,
      "templateFor": "test",
      "toolArgs": [
        "--color",
        "--debug",
        "--coverage=coverage",
        "--reporter=expanded",
        "--platform=vm",
        "--file-reporter=json:coverage/tests.json",
        "--timeout=5m",
        "--concurrency=12",
        "--chain-stack-traces",
        /* "--name=Disconnect_temporarily" */
      ],
      "args": [],
      /* "preLaunchTask": "start",
      "postDebugTask": "stop" */
    }
  ]
}